@model IEnumerable<Crowdfunding.Models.Company>



<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="AllCompanies" asp-route-sortOrder=@ViewData["NameSort"]>Company Name</a>
            </th>            
            <th>
                <a asp-action="AllCompanies" asp-route-sortOrder=@ViewData["MoneySort"]>Money Target</a>
            </th>
            <th>
                <a asp-action="AllCompanies" asp-route-sortOrder=@ViewData["DateSort"]>End Date</a>
            </th>
            <th>
                <a asp-action="AllCompanies" asp-route-sortOrder=@ViewData["CategorySort"]>Category</a>
            </th>            
            <th>
                <a asp-action="AllCompanies" asp-route-sortOrder=@ViewData["UserSort"]>User</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>                
                <td>
                    @Html.DisplayFor(modelItem => item.TargetMoney)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>                
                <td>
                    @Html.DisplayFor(modelItem => item.CustomUser.UserName)
                </td>
                <td>                    
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id">| Edit |</a>              
                        <a asp-action="Delete" asp-route-id="@item.Id" class="deleteCompany">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>


@section Scripts{

    <script>
        $(".deleteCompany").on("click", function (event) {
            event.preventDefault();
            let isDelete = confirm("Are you sure?");
            if (isDelete == false) { return }
            window.location.href = $(this).attr("href");
        })        
    </script>

 }